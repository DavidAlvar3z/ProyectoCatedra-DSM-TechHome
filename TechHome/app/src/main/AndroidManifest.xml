<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechHome"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Splash/Login Activity (LAUNCHER) -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.TechHome.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activities -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TechHome.NoActionBar" />

        <activity
            android:name=".activities.OptionsActivity"
            android:exported="false"
            android:theme="@style/Theme.TechHome.NoActionBar" />

        <!-- Welcome Activity (Home) -->
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.TechHome" />

        <!-- Products Activities -->
        <activity
            android:name=".activities.ProductsActivity"
            android:exported="false"
            android:parentActivityName=".activities.WelcomeActivity"
            android:theme="@style/Theme.TechHome" />

        <activity
            android:name=".activities.ProductDetailActivity"
            android:exported="false"
            android:parentActivityName=".activities.ProductsActivity"
            android:theme="@style/Theme.TechHome" />

        <!-- Search Activity -->
        <activity
            android:name=".activities.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.TechHome.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateVisible" />

        <!-- Favorites Activity -->
        <activity
            android:name=".activities.FavoritesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.TechHome" />

        <!-- Cart Activity -->
        <activity
            android:name=".activities.CartActivity"
            android:exported="false"
            android:theme="@style/Theme.TechHome" />

        <!-- Checkout Activity -->

        <activity
            android:name=".activities.CheckoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TechHome" />

        <!-- Google Sign-In Metadata -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activities.AddAddressActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.AddPaymentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>